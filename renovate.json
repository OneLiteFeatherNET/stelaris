{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "conflicted",
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "schedule": [
        "before 6:00am every friday"
      ]
    },
    {
      "description": "Dependencies whose updates shouldn't be done automatically",
      "matchPackageNames": [
        "intl"
      ],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "Component::security"
    ],
    "automerge": true
  }
}
